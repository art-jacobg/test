---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Contact | {SITE_TITLE}" description={SITE_DESCRIPTION} />
		<link rel="preload" href="/contact banner.png" as="image" fetchpriority="high" />
		<style>
			.hero-container { margin: 0; padding: 0; width: 100%; position: relative; background: white; }
			.hero-image { width: 100%; height: auto; display: block; margin: 0; padding: 0; }
			.page-title { font-family: "Superglue"; font-size: 5.5rem; color: white; position: absolute; top: 2rem; left: 2rem; margin: 0; z-index: 10; }
			main { background: white; margin: 0; padding: 3em 1em; width: 100%; max-width: 100%; }
			@media (max-width: 720px) { .page-title { font-size: 3rem; top: 1rem; left: 1rem; } main { padding: 2em 1em; } }
		</style>
	</head>
	<body>
		<Header />
		<div class="hero-container">
			<img class="hero-image" src="/contact banner.png" alt="Contact Banner" />
			<h1 class="page-title">CONTACT</h1>
		</div>
		<main>
			<p>Get in touch with me here.</p>
		</main>
		<Footer />
	</body>
</html>
