---
import { SITE_TITLE } from '../consts';
---

<header>
	<nav>
		<div class="nav-links">
			<a href="/">
				<div class="nav-button-wrapper">
					<img src="/button home.png" alt="Home" class="nav-button" />
					<span class="nav-button-text">Home</span>
				</div>
			</a>
			<a href="/portfolio">
				<div class="nav-button-wrapper">
					<img src="/button portfolio.png" alt="Portfolio" class="nav-button" />
					<span class="nav-button-text">Portfolio</span>
				</div>
			</a>
			<a href="/about">
				<div class="nav-button-wrapper">
					<img src="/button about.png" alt="About" class="nav-button" />
					<span class="nav-button-text">About</span>
				</div>
			</a>
			<a href="/contact">
				<div class="nav-button-wrapper">
					<img src="/button contact.png" alt="Contact" class="nav-button" />
					<span class="nav-button-text">Contact</span>
				</div>
			</a>
		</div>
		<div class="social-links">
			<a href="https://instagram.com" target="_blank" title="Instagram">
				<img src="/insta icon.png" alt="Instagram" class="social-icon" />
			</a>
			<a href="https://linkedin.com" target="_blank" title="LinkedIn">
				<img src="/linked in icon.png" alt="LinkedIn" class="social-icon" />
			</a>
			<a href="https://tiktok.com" target="_blank" title="TikTok">
				<img src="/tiktok icon.png" alt="TikTok" class="social-icon" />
			</a>
			<a href="https://x.com" target="_blank" title="X">
				<img src="/x icon.png" alt="X" class="social-icon" />
			</a>
			<a href="https://youtube.com" target="_blank" title="YouTube">
				<img src="/youtube icon.png" alt="YouTube" class="social-icon" />
			</a>
		</div>
	</nav>
</header>
<style>
header {
	margin: 0;
	padding: 0rem 0.4rem;
  background: white;
  box-shadow: 0 2px 8px rgba(var(--black), 5%);
  position: sticky;
  top: 0;
  z-index: 100;
}
nav {
  display: flex;
  align-items: center;
  justify-content: space-between;
  max-width: 100%;
  margin: 0 auto;
}
.nav-links {
  display: flex;
  gap: 0.25rem;
  align-items: center;
}
.nav-links a {
  padding: 0.25rem;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
}
.nav-links a { transition: transform 0.18s ease; }
.nav-button-wrapper {
  position: relative;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}
.nav-button {
	display: block;
	width: auto;
	height: auto;
	max-height: 140px;
}
.nav-button-text {
	position: absolute;
	font-weight: 900;
	font-size: 1.35rem;
	color: #fff;
	pointer-events: none;
	z-index: 10;
	text-align: center;
	text-shadow: 0 3px 8px rgba(0,0,0,0.6);
}
.nav-links a .nav-button-text { transition: transform 0.18s ease; }
.nav-links a:first-child .nav-button-text { transform: translateX(4px); }
.nav-links a:last-child .nav-button-text { transform: translateX(-4px); }
.social-links {
	display: flex;
	gap: 0.25rem;
	align-items: center;
}
.social-links a { display: inline-flex; }
.social-icon { max-height: 96px; width: auto; height: auto; display: block; }

@media (max-width: 1024px) {
  .nav-button { max-height: 86px; }
  .social-links img { width: 72px; height: 72px; }
	.nav-links a:first-child .nav-button-text { transform: translateX(3px); }
	.nav-links a:last-child .nav-button-text { transform: translateX(-3px); }
}
@media (max-width: 720px) {
	header { padding: 0rem 0.35rem; }
	.nav-button { max-height: 64px; }
	.nav-button-text { font-size: 0.95rem; }
	.social-links img { width: 56px; height: 56px; }
	.nav-links a:first-child .nav-button-text { transform: translateX(2px); }
	.nav-links a:last-child .nav-button-text { transform: translateX(-2px); }
}
</style>
